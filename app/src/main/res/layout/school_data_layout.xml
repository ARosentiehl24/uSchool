                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:gravity="center"
                android:maxLines="2"
                android:text="@string/calendar"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

            <TextView

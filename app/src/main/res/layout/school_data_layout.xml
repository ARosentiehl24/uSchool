                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="2"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/sp_12" />
